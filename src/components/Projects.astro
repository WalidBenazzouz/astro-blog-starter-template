---
// Projects Component - Brutalist project cards with video demos

const projects = [
  {
    id: "01",
    title: "Pneumonia Detection Model",
    description: "Deep learning-based pneumonia detection model using image classification and medical chest X-ray analysis.",
    stack: ["Deep Learning", "CNN", "TensorFlow", "Medical Imaging"],
    year: "2024",
    videoId: "GFAE4axwrMY"
  },
  {
    id: "02",
    title: "TeachMe Platform",
    description: "Application for managing private lessons and connecting students and teachers. Mobile and web interface.",
    stack: ["React", "Firebase", "Java", "Mobile"],
    year: "2024",
    videoId: "wDAM3Dp_XuI"
  },
  {
    id: "03",
    title: "Microservice E-Commerce",
    description: "Gateway, Config Server, multiple independent services (Billing, Customer, Inventory), Kafka-style communication.",
    stack: ["Spring Boot", "Eureka", "API Gateway", "OpenFeign", "Kafka"],
    year: "2024"
  },
  {
    id: "04",
    title: "Royal Air Maroc AI Chatbot",
    description: "AI chatbot for customer assistance with RAG systems. Secure Admin infrastructure for knowledge management.",
    stack: ["React", "FastAPI", "RAG", "Vite", "Python"],
    year: "2025"
  }
];
---

<section class="projects" id="projects">
  <div class="container">
    <div class="section-label reveal">Work</div>
    <h2 class="projects-heading reveal">Selected Projects</h2>
    
    <div class="projects-list">
      {projects.map((project, index) => (
        <article class={`project-card reveal-stagger stagger-${index + 1}`}>
          <div class="project-header">
            <span class="project-id">{project.id}</span>
            <span class="project-year">{project.year}</span>
          </div>
          
          <h3 class="project-title">{project.title}</h3>
          <p class="project-description">{project.description}</p>
          
          {project.videoId && (
            <div class="project-video">
              <div class="video-wrapper">
                <iframe
                  src={`https://www.youtube.com/embed/${project.videoId}?rel=0&modestbranding=1`}
                  title={`${project.title} Demo`}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
              <span class="video-label">â–¶ Demo Video</span>
            </div>
          )}
          
          <div class="project-stack">
            {project.stack.map((tech) => (
              <span class="stack-item">{tech}</span>
            ))}
          </div>
          
          <div class="project-line"></div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .projects {
    background: var(--color-bg-elevated);
    border-top: 1px solid var(--color-border);
  }

  .projects-heading {
    margin-bottom: var(--space-2xl);
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .project-card {
    position: relative;
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
    transition: all var(--duration-normal) var(--ease-out-quart);
  }

  .project-card:hover {
    padding-left: var(--space-lg);
  }

  .project-card:hover .project-line {
    width: 100%;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
  }

  .project-id {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 600;
  }

  .project-year {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .project-title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: var(--space-md);
    transition: color var(--duration-fast) var(--ease-out-quart);
  }

  .project-card:hover .project-title {
    color: var(--color-accent);
  }

  .project-description {
    max-width: 600px;
    margin-bottom: var(--space-lg);
  }

  /* Video Embed Styles */
  .project-video {
    margin-bottom: var(--space-lg);
    max-width: 560px;
  }

  .video-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    overflow: hidden;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .video-label {
    display: inline-block;
    margin-top: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .project-stack {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .stack-item {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-border);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: width var(--duration-slow) var(--ease-out-expo);
  }

  @media (max-width: 768px) {
    .project-card:hover {
      padding-left: var(--space-md);
    }
  }
</style>
